---
import { PRIVACY_TEXT, TERMS_TEXT } from '@constants/common';
import Modal from '../components/Modal.astro';

---

<footer class=" bg-white text-neutral-700 dark:bg-gray-800 dark:text-gray-100 px-4 py-4 border-t-2 border-green-700 bottom-0">
  <div class="flex flex-col md:flex-row justify-between items-center">
    <!-- Redes sociales -->
    <div class="flex space-x-4">
      <a href="https://www.facebook.com/PeludogsTenerife/?locale=es_ES" target="_blank" rel="noopener noreferrer" aria-label="Facebook" class="hover:text-gray-300">
        <i class="fa-brands fa-facebook"></i>
      </a>
      <a href="https://www.instagram.com/peludogs_tfe?igsh=MWlqaXlqZ2Ziemt6Yg==" target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="hover:text-gray-300">
        <i class="fa-brands fa-instagram"></i>
      </a>
      <a href="#" aria-label="Twitter" class="hover:text-gray-300">
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <!-- Icono de Twitter -->
        </svg>
      </a>
    </div>
  </div>

  <!-- Derechos de autor y enlaces legales -->
  <div class="text-center mt-4 md:mt-2">
    <p>&copy; 2024 Peludogs. Todos los derechos reservados.</p>
    <p>
      <a href="#" class="hover:text-gray-300 modal-open" data-modal-id="privacy-modal">Política de privacidad</a> |
      <a href="#" class="hover:text-gray-300 modal-open" data-modal-id="terms-modal">Términos y condiciones</a>
    </p>
  </div>

  <Modal id="privacy-modal" title="Política de privacidad" content={PRIVACY_TEXT} />
  <Modal id="terms-modal" title="Términos y condiciones" content={TERMS_TEXT} />
</footer>
<script src="../utils/modal.js"></script>
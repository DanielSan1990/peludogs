---
const { title, imageSrc, description, sectionSrc } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden group relative pb-2">
  <div class="w-full h-46 overflow-hidden">
    <img src={imageSrc} alt={title}
         class="w-full h-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-110" />
  </div>

  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-900">{title}</h3>
    <p class="text-gray-600">{description}</p>
  </div>
  
  <div class="absolute bottom-0 right-2">
    <small>
      <a href={sectionSrc}
         class="text-indigo-600 hover:text-indigo-800 transition duration-300 ease-in-out">
         Saber m√°s...
      </a>
    </small>
  </div>
</div>
